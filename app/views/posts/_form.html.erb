<%= render "layouts/errors", :object => @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %> <br><br>
  <%= f.text_field :title %> <br><br>
  <%= f.label :date %> <br><br>
  <%= f.date_field :date %> <br><br>
  <%= f.label :content %> <br><br>
  <%= f.text_area :content, size: "50x12" %> <br><br>
  <%= f.submit %>
<% end %>
